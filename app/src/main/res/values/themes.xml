<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Melif" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_melif</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/dark_melif</item>
    </style>

    <style name="Theme.Melif.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Melif.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Melif.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <!-- Customize Template -->
    <!-- Text Title Bold -->
    <style name="TextTitle.Bold" parent="Theme.Melif">
        <item name="android:textColor">@color/yellow_melif</item>
        <item name="android:textSize">34sp</item>
        <item name="lineHeight">40dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
   <!-- Text Title Bold White-->
    <style name="TextTitle.BoldOverview" parent="Theme.Melif">
        <item name="android:textColor">@color/white_melif</item>
        <item name="android:textSize">30sp</item>
        <item name="lineHeight">40dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

 <!-- Text Title Bold Detail -->
    <style name="TextTitle.BoldDetail" parent="Theme.Melif">
        <item name="android:textColor">@color/yellow_melif</item>
        <item name="android:textSize">34sp</item>
        <item name="lineHeight">28dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Text Title Bold Small -->
    <style name="TextTitle.BoldSmall" parent="Theme.Melif">
        <item name="android:textColor">@color/yellow_melif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

<!-- Text Title Bold White -->
    <style name="TextTitle.BoldWhite" parent="Theme.Melif">
        <item name="android:textColor">@color/white_melif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

     <!-- Text Description Light -->
    <style name="TextDesc.Light" parent="Theme.Melif">
        <item name="android:textColor">@color/white_melif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <!-- Text Description Regular -->
    <style name="TextDesc.Regular" parent="Theme.Melif">
        <item name="android:textColor">@color/white_melif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Text Description Reg2 -->
    <style name="TextDesc.Reg" parent="Theme.Melif">
        <item name="android:textColor">@color/white_melif</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

 <!-- Text Catalogue Bold -->
    <style name="TextTitleCatalogue.Bold" parent="Theme.Melif">
        <item name="android:textColor">@color/white_melif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

 <!-- Button -->
    <style name="ButtonMilef" parent="Theme.Melif">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white_melif</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonMilefWhite" parent="Theme.Melif">
        <item name="android:background">@drawable/rounded_corner_white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>