<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_placeholder_poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,1.4:1" />

        <TextView
            android:layout_toRightOf="@id/iv_poster"
            android:id="@+id/tv_id_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="1."/>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_id_member"
            android:layout_toRightOf="@id/iv_poster"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_star_detail"
            tools:text="-" />

        <TextView
            android:id="@+id/tv_rilis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rating"
            android:layout_toRightOf="@id/iv_poster"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_date_detail"
            android:textSize="16sp"
            tools:text="-" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>